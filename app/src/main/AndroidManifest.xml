<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capps.imops"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.capps.imops.Uvod"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name"
    android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.capps.imops.Home"
            android:label="@string/title_activity_home"
            android:configChanges="orientation"
    android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.capps.imops.UserSetup"
            android:label="@string/title_activity_user_setup"
            android:configChanges="orientation"
    android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.capps.imops.Settings"
            android:label="@string/title_activity_settings"
            android:configChanges="orientation"
    android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.capps.imops.Home_cashier"
            android:label="@string/title_activity_home_driver"
            android:configChanges="orientation"
    android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.capps.imops.MainActivity"
            android:label="@string/title_activity_MainActivity"
            android:configChanges="orientation"
    android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.capps.imops.Nfc"
            android:label="Nfc"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
