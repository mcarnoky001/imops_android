<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biela"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/hesielko"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@color/SlaboSiva"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/biela"
        android:textSize="30sp"
        android:password="true"
        />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:text="Reset Password"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/meno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/SlaboSiva"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Login name"
        android:inputType="textPersonName"
        android:textColor="@color/biela"
        android:textSize="30sp"
        android:layout_below="@+id/imageView1"
        android:layout_alignStart="@+id/hesielko"
        style="@android:style/TextAppearance.Holo.Widget.EditText" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/meno"
        android:layout_alignEnd="@+id/meno"
        android:layout_height="200dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter email adress"
        android:inputType="textEmailAddress"
        android:visibility="invisible"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Forgotten Password"
        android:textColor="@color/cierna"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/button1"
        style="@style/AppTheme"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_holo_light"
        android:text="Login"
        android:textColor="@color/cierna"
        android:textSize="20sp"
        android:layout_marginTop="28dp"
        android:layout_width="400px"
        android:layout_below="@+id/hesielko"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
