<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.capps.imops"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/biela">

        <TextView
            android:text="id of recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText5"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView7"
            android:textColor="@color/Siva" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="166dp"
            android:id="@+id/editText5"
            android:hint="e.g. 1055DD0F-534F-C5BE-804D-FC3E5568C102"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_width="350dp" />

        <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="121dp"
            android:id="@+id/button" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_marginTop="29dp"
            android:id="@+id/editText7"
            android:hint="e.g. 20"
            android:layout_width="100dp"
            android:layout_below="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <TextView
            android:text="Amount to send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/editText7"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>
