<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cierna"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/Spinner02"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Green"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text=" €"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Green"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Spinner01"
        android:layout_alignRight="@+id/textView2"
        android:text="Študentský:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/biela"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Spinner02"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:text="Dôchodcovský:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/biela"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignRight="@+id/textView1"
        android:text="Normálny:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/biela"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Spinner03"
        android:layout_toLeftOf="@+id/spinner1"
        android:text="ZŤP:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/biela"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="@color/biela" />

    <Spinner
        android:id="@+id/Spinner02"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Spinner01"
        android:layout_below="@+id/Spinner01"
        android:layout_marginTop="45dp"
        android:background="@color/biela"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_toLeftOf="@+id/spinner1"
        android:text="Free seats:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView5"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Green"
        android:textStyle="italic|bold" />

    <Spinner
        android:id="@+id/Spinner01"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="37dp"
        android:background="@color/biela" />

    <Spinner
        android:id="@+id/Spinner03"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Spinner02"
        android:layout_below="@+id/Spinner02"
        android:layout_marginTop="29dp"
        android:background="@color/biela"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="71dp"
        android:text="Price:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/biela" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_marginBottom="30dp"
        android:background="@drawable/star"
        android:text="Button"
        android:textColor="@color/cervena"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignTop="@+id/button1"
        android:background="@color/cierna"
        android:src="@drawable/arrow" />

</RelativeLayout>